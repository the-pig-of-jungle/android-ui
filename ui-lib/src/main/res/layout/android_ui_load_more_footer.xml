<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="vertical">
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentTop="true"
        android:background="@color/line_color" />
    <TextView
        android:id="@+id/load_more_tip"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:imeActionLabel="@id/bottom_line"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="上拉加载更多"
        android:textColor="#323232"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/loading_more_tip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/bottom_line"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="正在加载..."
        android:textColor="#323232"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/loading_more_mark"
        style="?android:progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/loading_more_tip"
        android:indeterminateTint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/load_more_mark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/load_more_tip"
        android:scaleType="center"
        android:tint="@color/colorPrimary" />
</RelativeLayout>